    <item>
        <shape>
            <solid android:color="#555555" />
            <padding android:bottom="5dp" android:right="5dp" android:top="5dp" android:left="5dp"/>
        </shape>
    </item>
    <!-- Dark Gray shadow. -->
    <item>
        <shape>
            <solid android:color="#dddddd" />
            <padding android:bottom="3dp" android:right="3dp" android:top="3dp" android:left="3dp"/>
        </shape>
    </item>
    <!-- Default foreground. -->
    <item>
        <shape>
            <solid android:color="#555555" />
        </shape>
    </item>
</layer-list>