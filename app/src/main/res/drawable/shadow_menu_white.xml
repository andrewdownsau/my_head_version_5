<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Dark Gray shadow. -->
    <item android:left="3dp" android:top="3dp">
        <shape>
            <gradient
                android:type="radial"
                android:startColor="@color/black"
                android:endColor="@android:color/transparent"
                android:centerX="0.3"
                android:centerY="0.0"
                android:gradientRadius="400%p"/>
            <corners android:radius="5dp" />
        </shape>
    </item>
    <!-- Default foreground. -->
    <item android:id="@+id/foregroundDrawable" android:bottom="3dp" android:right="3dp">
        <shape>
            <solid android:color="#FFFFFFFF" />
            <stroke
                android:width="1.5dp"
                android:color="#ff444444" />
            <corners android:radius="5dp" />
            <padding android:bottom="3dp" android:right="3dp"/>
        </shape>
    </item>
</layer-list>