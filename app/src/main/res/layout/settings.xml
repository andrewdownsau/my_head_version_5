<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui_fragments.U05TaskAddEdit">

    <!-- Main constraint layout for UI Content -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/settings_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:minHeight="200dp"
        android:padding="10dp">

        <!-- Task Feature Settings -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_task_features"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:minHeight="200dp"
            style="@style/menu_primary"
            android:padding="15dp">

            <TextView
                android:id="@+id/title_task_features"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:gravity="center_vertical"
                android:text="@string/task_features"
                android:textSize="18sp"
                android:textColor="@color/content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent" />


            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/feature_motivation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/feature_motivation_label"
                android:textSize="16sp"
                android:textColor="@color/sub_content"
                android:theme="@style/SCBSwitch"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/title_task_features"
                tools:ignore="VisualLintButtonSize"/>

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/feature_complexity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/feature_complexity_label"
                android:textSize="16sp"
                android:textColor="@color/sub_content"
                android:theme="@style/SCBSwitch"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/feature_motivation"
                tools:ignore="VisualLintButtonSize"/>

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/feature_checklist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/feature_checklist_label"
                android:textSize="16sp"
                android:textColor="@color/sub_content"
                android:theme="@style/SCBSwitch"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/feature_complexity"
                tools:ignore="VisualLintButtonSize" />

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/feature_repeat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/feature_repeat_label"
                android:textSize="16sp"
                android:textColor="@color/sub_content"
                android:theme="@style/SCBSwitch"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/feature_checklist"
                tools:ignore="VisualLintButtonSize"/>

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/feature_condition"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/feature_condition_label"
                android:textSize="16sp"
                android:textColor="@color/sub_content"
                android:theme="@style/SCBSwitch"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/feature_repeat"
                tools:ignore="VisualLintButtonSize"/>

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/feature_time_progress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/feature_timePB_label"
                android:textColor="@color/sub_content"
                android:textSize="16sp"
                android:theme="@style/SCBSwitch"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/feature_condition"
                tools:ignore="VisualLintButtonSize,TouchTargetSizeCheck" />

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/feature_checklist_progress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/feature_checklistPB_label"
                android:textSize="16sp"
                android:textColor="@color/sub_content"
                android:theme="@style/SCBSwitch"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/feature_time_progress"
                tools:ignore="VisualLintButtonSize" />


            <android.widget.Button
                android:id="@+id/btn_save_task_features"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:text="@string/save"
                android:textSize="16sp"
                style="@style/button_primary"
                app:layout_constraintTop_toBottomOf="@id/feature_checklist_progress"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Task Sorting Order Settings -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_task_sorting_order"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:minHeight="200dp"
            style="@style/menu_primary"
            android:layout_marginTop="10dp"
            android:padding="15dp"
            app:layout_constraintTop_toBottomOf="@id/layout_task_features">

            <TextView
                android:id="@+id/title_task_sorting"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:gravity="center_vertical"
                android:text="@string/task_sorting_order"
                android:textSize="18sp"
                android:textColor="@color/content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/task_sort_default"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                app:layout_constraintTop_toBottomOf="@id/title_task_sorting">

                <android.widget.Button
                    android:id="@+id/button_incomplete_status"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="5dp"
                    android:background="@mipmap/icon_high"
                    android:contentDescription="@string/settings_order_button"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/label_incomplete_status"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="TouchTargetSizeCheck" />

                <TextView
                    android:id="@+id/label_incomplete_status"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:gravity="center_vertical"
                    android:text="@string/status_incomplete_label"
                    android:textSize="16sp"
                    android:textColor="@color/sub_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/button_incomplete_status" />

                <android.widget.Button
                    android:id="@+id/button_pending_status"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="10dp"
                    android:background="@mipmap/icon_low"
                    android:contentDescription="@string/settings_order_button"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/label_pending_status"
                    app:layout_constraintTop_toBottomOf="@id/button_incomplete_status"
                    tools:ignore="TouchTargetSizeCheck" />

                <TextView
                    android:id="@+id/label_pending_status"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:layout_marginTop="5dp"
                    android:gravity="center_vertical"
                    android:text="@string/status_pending_label"
                    android:textSize="16sp"
                    android:textColor="@color/sub_content"
                    app:layout_constraintTop_toBottomOf="@id/button_incomplete_status"
                    app:layout_constraintLeft_toRightOf="@id/button_pending_status" />

            </androidx.constraintlayout.widget.ConstraintLayout>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/task_sort_order_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/task_sort_default"/>


            <android.widget.Button
                android:id="@+id/btn_save_task_sorting"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:text="@string/save"
                android:textSize="16sp"
                style="@style/button_primary"
                app:layout_constraintTop_toBottomOf="@id/task_sort_order_list"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Task Color Settings -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_ui_colors"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:minHeight="200dp"
            style="@style/menu_primary"
            android:layout_marginTop="10dp"
            android:padding="15dp"
            app:layout_constraintTop_toBottomOf="@id/layout_task_sorting_order">

            <TextView
                android:id="@+id/title_ui_colors"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:gravity="center_vertical"
                android:text="@string/ui_colours"
                android:textSize="18sp"
                android:textColor="@color/content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent" />

            <TextView
                android:id="@+id/label_colour_overdue"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:gravity="center_vertical"
                android:text="@string/colour_overdue_label"
                android:textSize="16sp"
                android:textColor="@color/sub_content"
                app:layout_constraintTop_toBottomOf="@id/title_ui_colors"
                app:layout_constraintLeft_toLeftOf="parent" />

            <EditText
                android:id="@+id/edit_colour_overdue"
                android:layout_width="100dp"
                android:layout_height="48dp"
                android:layout_marginStart="40dp"
                android:autofillHints="Name of export file"
                android:inputType="text"
                android:textColor="@color/sub_content"
                android:labelFor="@id/label_colour_overdue"
                android:hint="@string/color_hint"
                app:layout_constraintHorizontal_chainStyle="spread"
                app:layout_constraintBottom_toBottomOf="@id/label_colour_overdue"
                app:layout_constraintLeft_toRightOf="@id/label_colour_overdue"
                app:layout_constraintRight_toLeftOf="@id/button_colour_overdue"
                tools:ignore="LabelFor" />


            <android.widget.Button
                android:id="@+id/button_colour_overdue"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginBottom="5dp"
                android:background="#dddddd"
                android:contentDescription="@string/settings_color_image"
                app:layout_constraintLeft_toRightOf="@id/edit_colour_overdue"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/edit_colour_overdue"
                tools:ignore="TouchTargetSizeCheck" />

            <TextView
                android:id="@+id/label_colour_today"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_marginTop="20dp"
                android:gravity="center_vertical"
                android:text="@string/colour_today_label"
                android:textSize="16sp"
                android:textColor="@color/sub_content"
                app:layout_constraintTop_toBottomOf="@id/label_colour_overdue"
                app:layout_constraintLeft_toLeftOf="parent" />

            <EditText
                android:id="@+id/edit_colour_today"
                android:layout_width="100dp"
                android:layout_height="48dp"
                android:autofillHints="Name of export file"
                android:inputType="text"
                android:textColor="@color/sub_content"
                android:labelFor="@id/label_colour_today"
                android:hint="@string/color_hint"
                app:layout_constraintBottom_toBottomOf="@id/label_colour_today"
                app:layout_constraintLeft_toLeftOf="@id/edit_colour_overdue"
                app:layout_constraintRight_toRightOf="@id/edit_colour_overdue"
                tools:ignore="LabelFor" />


            <android.widget.Button
                android:id="@+id/button_colour_today"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginBottom="5dp"
                android:background="#dddddd"
                android:contentDescription="@string/settings_color_image"
                app:layout_constraintBottom_toBottomOf="@id/edit_colour_today"
                app:layout_constraintLeft_toLeftOf="@id/button_colour_overdue"
                app:layout_constraintRight_toRightOf="@id/button_colour_overdue"
                tools:ignore="TouchTargetSizeCheck"/>

            <TextView
                android:id="@+id/label_colour_tomorrow"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_marginTop="20dp"
                android:gravity="center_vertical"
                android:text="@string/colour_tomorrow_label"
                android:textSize="16sp"
                android:textColor="@color/sub_content"
                app:layout_constraintTop_toBottomOf="@id/label_colour_today"
                app:layout_constraintLeft_toLeftOf="parent" />

            <EditText
                android:id="@+id/edit_colour_tomorrow"
                android:layout_width="100dp"
                android:layout_height="48dp"
                android:layout_marginTop="20dp"
                android:autofillHints="@string/color_hint"
                android:inputType="text"
                android:textColor="@color/sub_content"
                android:labelFor="@id/label_colour_tomorrow"
                android:hint="@string/color_hint"
                app:layout_constraintBottom_toBottomOf="@id/label_colour_tomorrow"
                app:layout_constraintLeft_toLeftOf="@id/edit_colour_overdue"
                app:layout_constraintRight_toRightOf="@id/edit_colour_overdue"
                tools:ignore="LabelFor" />


            <android.widget.Button
                android:id="@+id/button_colour_tomorrow"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginBottom="5dp"
                android:background="#dddddd"
                android:contentDescription="@string/settings_color_image"
                app:layout_constraintBottom_toBottomOf="@id/edit_colour_tomorrow"
                app:layout_constraintLeft_toLeftOf="@id/button_colour_overdue"
                app:layout_constraintRight_toRightOf="@id/button_colour_overdue"
                tools:ignore="TouchTargetSizeCheck"/>

            <TextView
                android:id="@+id/label_colour_three_days"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_marginTop="20dp"
                android:gravity="center_vertical"
                android:text="@string/colour_three_days_label"
                android:textSize="16sp"
                android:textColor="@color/sub_content"
                app:layout_constraintTop_toBottomOf="@id/label_colour_tomorrow"
                app:layout_constraintLeft_toLeftOf="parent" />

            <EditText
                android:id="@+id/edit_colour_three_days"
                android:layout_width="100dp"
                android:layout_height="48dp"
                android:layout_marginTop="20dp"
                android:autofillHints="@string/color_hint"
                android:inputType="text"
                android:textColor="@color/sub_content"
                android:labelFor="@id/label_colour_three_days"
                android:hint="@string/color_hint"
                app:layout_constraintBottom_toBottomOf="@id/label_colour_three_days"
                app:layout_constraintLeft_toLeftOf="@id/edit_colour_overdue"
                app:layout_constraintRight_toRightOf="@id/edit_colour_overdue"
                tools:ignore="LabelFor" />


            <android.widget.Button
                android:id="@+id/button_colour_three_days"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginBottom="5dp"
                android:background="#dddddd"
                android:contentDescription="@string/settings_color_image"
                app:layout_constraintBottom_toBottomOf="@id/edit_colour_three_days"
                app:layout_constraintLeft_toLeftOf="@id/button_colour_overdue"
                app:layout_constraintRight_toRightOf="@id/button_colour_overdue"
                tools:ignore="TouchTargetSizeCheck"/>

            <TextView
                android:id="@+id/label_colour_week"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_marginTop="20dp"
                android:gravity="center_vertical"
                android:text="@string/colour_week_label"
                android:textSize="16sp"
                android:textColor="@color/sub_content"
                app:layout_constraintTop_toBottomOf="@id/label_colour_three_days"
                app:layout_constraintLeft_toLeftOf="parent" />

            <EditText
                android:id="@+id/edit_colour_week"
                android:layout_width="100dp"
                android:layout_height="48dp"
                android:layout_marginTop="20dp"
                android:autofillHints="@string/color_hint"
                android:inputType="text"
                android:textColor="@color/sub_content"
                android:labelFor="@id/label_colour_week"
                android:hint="@string/color_hint"
                app:layout_constraintBottom_toBottomOf="@id/label_colour_week"
                app:layout_constraintLeft_toLeftOf="@id/edit_colour_overdue"
                app:layout_constraintRight_toRightOf="@id/edit_colour_overdue"
                tools:ignore="LabelFor" />


            <android.widget.Button
                android:id="@+id/button_colour_week"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginBottom="5dp"
                android:background="#dddddd"
                android:contentDescription="@string/settings_color_image"
                app:layout_constraintBottom_toBottomOf="@id/edit_colour_week"
                app:layout_constraintLeft_toLeftOf="@id/button_colour_overdue"
                app:layout_constraintRight_toRightOf="@id/button_colour_overdue"
                tools:ignore="TouchTargetSizeCheck"/>

            <TextView
                android:id="@+id/label_colour_week_plus"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_marginTop="20dp"
                android:gravity="center_vertical"
                android:text="@string/colour_week_plus_label"
                android:textSize="16sp"
                android:textColor="@color/sub_content"
                app:layout_constraintTop_toBottomOf="@id/label_colour_week"
                app:layout_constraintLeft_toLeftOf="parent" />

            <EditText
                android:id="@+id/edit_colour_week_plus"
                android:layout_width="100dp"
                android:layout_height="48dp"
                android:autofillHints="@string/color_hint"
                android:layout_marginTop="20dp"
                android:inputType="text"
                android:textColor="@color/sub_content"
                android:labelFor="@id/label_colour_week_plus"
                android:hint="@string/color_hint"
                app:layout_constraintBottom_toBottomOf="@id/label_colour_week_plus"
                app:layout_constraintLeft_toLeftOf="@id/edit_colour_overdue"
                app:layout_constraintRight_toRightOf="@id/edit_colour_overdue"
                tools:ignore="LabelFor" />


            <android.widget.Button
                android:id="@+id/button_colour_week_plus"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginBottom="5dp"
                android:background="#dddddd"
                android:contentDescription="@string/settings_color_image"
                app:layout_constraintBottom_toBottomOf="@id/edit_colour_week_plus"
                app:layout_constraintLeft_toLeftOf="@id/button_colour_overdue"
                app:layout_constraintRight_toRightOf="@id/button_colour_overdue"
                tools:ignore="TouchTargetSizeCheck"/>

            <TextView
                android:id="@+id/label_colour_conditional"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_marginTop="20dp"
                android:gravity="center_vertical"
                android:text="@string/colour_conditional_label"
                android:textSize="16sp"
                android:textColor="@color/sub_content"
                app:layout_constraintTop_toBottomOf="@id/label_colour_week_plus"
                app:layout_constraintLeft_toLeftOf="parent" />

            <EditText
                android:id="@+id/edit_colour_conditional"
                android:layout_width="100dp"
                android:layout_height="48dp"
                android:autofillHints="@string/color_hint"
                android:layout_marginTop="20dp"
                android:inputType="text"
                android:textColor="@color/sub_content"
                android:labelFor="@id/label_colour_conditional"
                android:hint="@string/color_hint"
                app:layout_constraintBottom_toBottomOf="@id/label_colour_conditional"
                app:layout_constraintLeft_toLeftOf="@id/edit_colour_overdue"
                app:layout_constraintRight_toRightOf="@id/edit_colour_overdue"
                tools:ignore="LabelFor" />


            <android.widget.Button
                android:id="@+id/button_colour_conditional"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginBottom="5dp"
                android:background="#dddddd"
                android:contentDescription="@string/settings_color_image"
                app:layout_constraintBottom_toBottomOf="@id/edit_colour_conditional"
                app:layout_constraintLeft_toLeftOf="@id/button_colour_overdue"
                app:layout_constraintRight_toRightOf="@id/button_colour_overdue"
                tools:ignore="TouchTargetSizeCheck"/>

            <TextView
                android:id="@+id/label_colour_pending"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_marginTop="20dp"
                android:gravity="center_vertical"
                android:text="@string/colour_pending_label"
                android:textSize="16sp"
                android:textColor="@color/sub_content"
                app:layout_constraintTop_toBottomOf="@id/label_colour_conditional"
                app:layout_constraintLeft_toLeftOf="parent" />


            <EditText
                android:id="@+id/edit_colour_pending"
                android:layout_width="100dp"
                android:layout_height="48dp"
                android:autofillHints="@string/color_hint"
                android:layout_marginTop="20dp"
                android:inputType="text"
                android:textColor="@color/sub_content"
                android:labelFor="@id/label_colour_pending"
                android:hint="@string/color_hint"
                app:layout_constraintBottom_toBottomOf="@id/label_colour_pending"
                app:layout_constraintLeft_toLeftOf="@id/edit_colour_overdue"
                app:layout_constraintRight_toRightOf="@id/edit_colour_overdue"
                tools:ignore="LabelFor" />


            <android.widget.Button
                android:id="@+id/button_colour_pending"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginBottom="5dp"
                android:background="#dddddd"
                android:contentDescription="@string/settings_color_image"
                app:layout_constraintBottom_toBottomOf="@id/edit_colour_pending"
                app:layout_constraintLeft_toLeftOf="@id/button_colour_overdue"
                app:layout_constraintRight_toRightOf="@id/button_colour_overdue"
                tools:ignore="TouchTargetSizeCheck"/>

            <TextView
                android:id="@+id/label_colour_start_today"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_marginTop="20dp"
                android:gravity="center_vertical"
                android:text="@string/colour_start_today_label"
                android:textSize="16sp"
                android:textColor="@color/sub_content"
                app:layout_constraintTop_toBottomOf="@id/label_colour_pending"
                app:layout_constraintLeft_toLeftOf="parent" />


            <EditText
                android:id="@+id/edit_colour_start_today"
                android:layout_width="100dp"
                android:layout_height="48dp"
                android:autofillHints="@string/color_hint"
                android:layout_marginTop="20dp"
                android:inputType="text"
                android:textColor="@color/sub_content"
                android:labelFor="@id/label_colour_start_today"
                android:hint="@string/color_hint"
                app:layout_constraintBottom_toBottomOf="@id/label_colour_start_today"
                app:layout_constraintLeft_toLeftOf="@id/edit_colour_overdue"
                app:layout_constraintRight_toRightOf="@id/edit_colour_overdue"
                tools:ignore="LabelFor" />


            <android.widget.Button
                android:id="@+id/button_colour_start_today"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginBottom="5dp"
                android:background="#dddddd"
                android:contentDescription="@string/settings_color_image"
                app:layout_constraintBottom_toBottomOf="@id/edit_colour_start_today"
                app:layout_constraintLeft_toLeftOf="@id/button_colour_overdue"
                app:layout_constraintRight_toRightOf="@id/button_colour_overdue"
                tools:ignore="TouchTargetSizeCheck"/>

            <TextView
                android:id="@+id/label_colour_complete"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_marginTop="20dp"
                android:gravity="center_vertical"
                android:text="@string/colour_complete_label"
                android:textSize="16sp"
                android:textColor="@color/sub_content"
                app:layout_constraintTop_toBottomOf="@id/label_colour_start_today"
                app:layout_constraintLeft_toLeftOf="parent" />

            <EditText
                android:id="@+id/edit_colour_complete"
                android:layout_width="100dp"
                android:layout_height="48dp"
                android:autofillHints="@string/color_hint"
                android:layout_marginTop="20dp"
                android:inputType="text"
                android:textColor="@color/sub_content"
                android:labelFor="@id/label_colour_complete"
                android:hint="@string/color_hint"
                app:layout_constraintBottom_toBottomOf="@id/label_colour_complete"
                app:layout_constraintLeft_toLeftOf="@id/edit_colour_overdue"
                app:layout_constraintRight_toRightOf="@id/edit_colour_overdue"
                tools:ignore="LabelFor" />


            <android.widget.Button
                android:id="@+id/button_colour_complete"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:autofillHints="@string/color_hint"
                android:layout_marginBottom="5dp"
                android:background="#dddddd"
                android:contentDescription="@string/settings_color_image"
                app:layout_constraintBottom_toBottomOf="@id/edit_colour_complete"
                app:layout_constraintLeft_toLeftOf="@id/button_colour_overdue"
                app:layout_constraintRight_toRightOf="@id/button_colour_overdue"
                tools:ignore="TouchTargetSizeCheck"/>

            <TextView
                android:id="@+id/label_colour_timePB"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_marginTop="20dp"
                android:gravity="center_vertical"
                android:text="@string/colour_timePB_label"
                android:textSize="16sp"
                android:textColor="@color/sub_content"
                app:layout_constraintTop_toBottomOf="@id/label_colour_complete"
                app:layout_constraintLeft_toLeftOf="parent" />

            <EditText
                android:id="@+id/edit_colour_timePB"
                android:layout_width="100dp"
                android:layout_height="48dp"
                android:autofillHints="@string/color_hint"
                android:layout_marginTop="20dp"
                android:inputType="text"
                android:textColor="@color/sub_content"
                android:labelFor="@id/label_colour_complete"
                android:hint="@string/color_hint"
                app:layout_constraintBottom_toBottomOf="@id/label_colour_timePB"
                app:layout_constraintLeft_toLeftOf="@id/edit_colour_overdue"
                app:layout_constraintRight_toRightOf="@id/edit_colour_overdue"
                tools:ignore="LabelFor" />


            <android.widget.Button
                android:id="@+id/button_colour_timePB"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginBottom="5dp"
                android:background="#dddddd"
                android:contentDescription="@string/settings_color_image"
                app:layout_constraintBottom_toBottomOf="@id/edit_colour_timePB"
                app:layout_constraintLeft_toLeftOf="@id/button_colour_overdue"
                app:layout_constraintRight_toRightOf="@id/button_colour_overdue"
                tools:ignore="TouchTargetSizeCheck"/>

            <TextView
                android:id="@+id/label_colour_checklistPB"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_marginTop="20dp"
                android:gravity="center_vertical"
                android:text="@string/colour_checklistPB_label"
                android:textSize="16sp"
                android:textColor="@color/sub_content"
                app:layout_constraintTop_toBottomOf="@id/label_colour_timePB"
                app:layout_constraintLeft_toLeftOf="parent" />

            <EditText
                android:id="@+id/edit_colour_checklistPB"
                android:layout_width="100dp"
                android:layout_height="48dp"
                android:autofillHints="@string/color_hint"
                android:layout_marginTop="20dp"
                android:inputType="text"
                android:textColor="@color/sub_content"
                android:labelFor="@id/label_colour_complete"
                android:hint="@string/color_hint"
                app:layout_constraintBottom_toBottomOf="@id/label_colour_checklistPB"
                app:layout_constraintLeft_toLeftOf="@id/edit_colour_overdue"
                app:layout_constraintRight_toRightOf="@id/edit_colour_overdue"
                tools:ignore="LabelFor" />

            <android.widget.Button
                android:id="@+id/button_colour_checklistPB"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginBottom="5dp"
                android:background="#dddddd"
                android:contentDescription="@string/settings_color_image"
                app:layout_constraintBottom_toBottomOf="@id/edit_colour_checklistPB"
                app:layout_constraintLeft_toLeftOf="@id/button_colour_overdue"
                app:layout_constraintRight_toRightOf="@id/button_colour_overdue"
                tools:ignore="TouchTargetSizeCheck"/>

            <!--Save button for colors-->
            <android.widget.Button
                android:id="@+id/btn_save_colours"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="5dp"
                android:text="@string/save"
                android:textSize="16sp"
                style="@style/button_primary"
                app:layout_constraintTop_toBottomOf="@id/label_colour_checklistPB"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Archive Auto Delete Settings -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_archive_delete"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:minHeight="200dp"
            android:layout_marginTop="10dp"
            style="@style/menu_primary"
            android:padding="15dp"
            app:layout_constraintTop_toBottomOf="@id/layout_ui_colors">

            <TextView
                android:id="@+id/title_archive_delete"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:gravity="center_vertical"
                android:text="@string/archive_delete"
                android:textSize="18sp"
                android:textColor="@color/content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent" />

            <RadioButton
                android:id="@+id/radio_delete_never"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/sub_content"
                android:text="@string/never"
                android:textSize="16sp"
                app:layout_constraintTop_toBottomOf="@id/title_archive_delete"
                app:layout_constraintLeft_toLeftOf="parent"/>


            <RadioButton
                android:id="@+id/radio_delete_after"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/after_repeats"
                android:textColor="@color/sub_content"
                android:textSize="16sp"
                app:layout_constraintTop_toBottomOf="@id/radio_delete_never"
                app:layout_constraintLeft_toLeftOf="parent"/>

            <EditText
                android:id="@+id/edit_delete_after"
                android:layout_width="50dp"
                android:layout_height="48dp"
                android:autofillHints="Repeat until clause"
                android:inputType="number"
                android:textColor="@color/sub_content"
                android:textAlignment="center"
                android:labelFor="@id/radio_repeat_until"
                android:hint="@string/x_times"
                app:layout_constraintTop_toTopOf="@+id/radio_delete_after"
                app:layout_constraintLeft_toRightOf="@+id/radio_delete_after" />

            <TextView
                android:id="@+id/label_delete_after"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="12dp"
                android:text="@string/after_days_2"
                android:textColor="@color/sub_content"
                android:textSize="16sp"
                app:layout_constraintTop_toTopOf="@+id/radio_delete_after"
                app:layout_constraintLeft_toRightOf="@+id/edit_delete_after" />


            <android.widget.Button
                android:id="@+id/btn_save_archive_delete"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:text="@string/save"
                android:textSize="16sp"
                style="@style/button_primary"
                app:layout_constraintTop_toBottomOf="@+id/radio_delete_after"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Reset to default settings Functionality -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_default_reset"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:minHeight="150dp"
            style="@style/menu_primary"
            android:layout_marginTop="10dp"
            android:padding="15dp"
            app:layout_constraintTop_toBottomOf="@id/layout_archive_delete">

            <TextView
                android:id="@+id/title_default_reset"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:gravity="center_vertical"
                android:text="@string/default_reset"
                android:textSize="18sp"
                android:textColor="@color/content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent" />

            <android.widget.Button
                android:id="@+id/btn_default_reset"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="5dp"
                android:text="@string/reset"
                android:textSize="16sp"
                style="@style/button_primary"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>