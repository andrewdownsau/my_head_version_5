                app:layout_constraintTop_toBottomOf="@id/title_task_archive">

                <TextView
                    android:id="@+id/body_task_archive"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="@string/help_task_archive_body"
                    android:textSize="18sp"
                    android:textColor="@color/sub_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/body_task_archive_img1" />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/body_task_archive_img1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/fab_margin"
                    android:layout_marginTop="16dp"
                    app:srcCompat="@drawable/ic_archive_folder"
                    app:backgroundTint="#f9e07b"
                    app:tint="@color/content"
                    app:shapeAppearanceOverlay="@style/fab_rounded"
                    android:contentDescription="@string/fab_add_context"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/body_task_archive"
                    app:layout_constraintRight_toRightOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Tasks status and colors -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_task_status"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@style/menu_primary"
            android:layout_marginTop="5dp"
            android:padding="15dp"
            app:layout_constraintTop_toBottomOf="@+id/layout_task_archive"
            app:layout_constraintLeft_toLeftOf="parent">

            <android.widget.Button
                android:id="@+id/collapse_task_status"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@drawable/ic_menu_up"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/title_task_status"/>

            <TextView
                android:id="@+id/title_task_status"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:gravity="center_vertical"
                android:text="@string/help_task_status"
                android:textSize="18sp"
                android:textColor="@color/sub_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@id/collapse_task_status" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_body_task_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:visibility="gone"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/title_task_status">
                <TextView
                    android:id="@+id/body_task_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="@string/help_task_status_body"
                    android:textSize="18sp"
                    android:textColor="@color/sub_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Tasks complexity and motivation -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_task_sliders"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@style/menu_primary"
            android:layout_marginTop="5dp"
            android:padding="15dp"
            app:layout_constraintTop_toBottomOf="@+id/layout_task_status"
            app:layout_constraintLeft_toLeftOf="parent">

            <android.widget.Button
                android:id="@+id/collapse_task_sliders"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@drawable/ic_menu_up"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/title_task_sliders"/>

