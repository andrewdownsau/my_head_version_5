                app:layout_constraintTop_toBottomOf="@id/title_task_checklist">
                <TextView
                    android:id="@+id/body_task_checklist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="@string/help_task_checklist_body"
                    android:textSize="18sp"
                    android:textColor="@color/sub_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Repeating tasks -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_repeating_tasks"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@style/menu_primary"
            android:layout_marginTop="5dp"
            android:padding="15dp"
            app:layout_constraintTop_toBottomOf="@+id/layout_task_checklist"
            app:layout_constraintLeft_toLeftOf="parent">

            <android.widget.Button
