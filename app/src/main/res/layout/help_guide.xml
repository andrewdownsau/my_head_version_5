            android:id="@+id/layout_task_checklist"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@style/menu_primary"
            android:layout_marginTop="5dp"
            android:padding="15dp"
            app:layout_constraintTop_toBottomOf="@+id/layout_task_sliders"
            app:layout_constraintLeft_toLeftOf="parent">

            <android.widget.Button
                android:id="@+id/collapse_task_checklist"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@drawable/ic_menu_up"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/title_task_checklist"/>

            <TextView
                android:id="@+id/title_task_checklist"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:gravity="center_vertical"
                android:text="@string/help_task_checklist"
                android:textSize="18sp"
                android:textColor="@color/sub_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@id/collapse_task_checklist" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_body_task_checklist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:visibility="gone"
                app:layout_constraintLeft_toLeftOf="parent"
