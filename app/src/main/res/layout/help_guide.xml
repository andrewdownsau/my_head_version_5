<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui_fragments.U05TaskAddEdit">

    <!-- Main constraint layout for UI Content -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/settings_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:minHeight="200dp"
        android:padding="10dp">

        <!-- General introduction to the App -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_general_intro"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@style/menu_primary"
            android:padding="15dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent">

            <android.widget.Button
                android:id="@+id/collapse_general_intro"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@drawable/ic_menu_up"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/title_general_intro"/>

            <TextView
                android:id="@+id/title_general_intro"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:gravity="center_vertical"
                android:text="@string/help_general_intro"
                android:textSize="18sp"
                android:textColor="@color/sub_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@id/collapse_general_intro" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_body_general_intro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:visibility="gone"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/title_general_intro">
                <TextView
                    android:id="@+id/body_general_intro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="@string/help_general_intro_body"
                    android:textSize="18sp"
                    android:textColor="@color/sub_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Add, edit and delete contexts -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_crud_context"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@style/menu_primary"
            android:layout_marginTop="5dp"
            android:padding="15dp"
            app:layout_constraintTop_toBottomOf="@+id/layout_general_intro"
            app:layout_constraintLeft_toLeftOf="parent">

            <android.widget.Button
                android:id="@+id/collapse_crud_context"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@drawable/ic_menu_up"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/title_crud_context"/>

            <TextView
                android:id="@+id/title_crud_context"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:gravity="center_vertical"
                android:text="@string/help_crud_contexts"
                android:textSize="18sp"
                android:textColor="@color/sub_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@id/collapse_crud_context" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_body_crud_context"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:visibility="gone"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/title_crud_context">

                <TextView
                    android:id="@+id/body_crud_context_add"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="@string/help_crud_contexts_body_add"
                    android:textSize="18sp"
                    android:textColor="@color/sub_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/body_crud_context_img1" />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/body_crud_context_img1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/fab_margin"
                    android:layout_marginTop="16dp"
                    app:srcCompat="@android:drawable/ic_input_add"
                    app:backgroundTint="@color/background"
                    app:tint="@color/content"
                    app:shapeAppearanceOverlay="@style/fab_rounded"
                    android:contentDescription="@string/fab_add_context"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/body_crud_context_add"
                    app:layout_constraintRight_toRightOf="parent"/>

                <TextView
                    android:id="@+id/body_crud_context_edit_delete"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"
                    android:text="@string/help_crud_contexts_body_edit_delete"
                    android:textSize="18sp"
                    android:textColor="@color/sub_content"
                    app:layout_constraintTop_toBottomOf="@+id/body_crud_context_add"
                    app:layout_constraintLeft_toLeftOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Add, edit and delete tasks -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_crud_tasks"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@style/menu_primary"
            android:layout_marginTop="5dp"
            android:padding="15dp"
            app:layout_constraintTop_toBottomOf="@+id/layout_crud_context"
            app:layout_constraintLeft_toLeftOf="parent">

            <android.widget.Button
                android:id="@+id/collapse_crud_tasks"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@drawable/ic_menu_up"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/title_crud_tasks"/>

            <TextView
                android:id="@+id/title_crud_tasks"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:gravity="center_vertical"
                android:text="@string/help_crud_tasks"
                android:textSize="18sp"
                android:textColor="@color/sub_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@id/collapse_crud_tasks" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_body_crud_tasks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:visibility="gone"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/title_crud_tasks">

                <TextView
                    android:id="@+id/body_crud_tasks_add"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="@string/help_crud_tasks_body_add"
                    android:textSize="18sp"
                    android:textColor="@color/sub_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/body_crud_tasks_img1" />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/body_crud_tasks_img1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/fab_margin"
                    android:layout_marginTop="16dp"
                    app:srcCompat="@android:drawable/ic_input_add"
                    app:backgroundTint="@color/background"
                    app:tint="@color/content"
                    app:shapeAppearanceOverlay="@style/fab_rounded"
                    android:contentDescription="@string/fab_add_context"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/body_crud_tasks_add"
                    app:layout_constraintRight_toRightOf="parent"/>

                <TextView
                    android:id="@+id/body_crud_tasks_edit_delete"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"
                    android:text="@string/help_crud_tasks_body_edit_delete"
                    android:textSize="18sp"
                    android:textColor="@color/sub_content"
                    app:layout_constraintTop_toBottomOf="@+id/body_crud_tasks_add"
                    app:layout_constraintLeft_toLeftOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Completing tasks -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_completing_tasks"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@style/menu_primary"
            android:layout_marginTop="5dp"
            android:padding="15dp"
            app:layout_constraintTop_toBottomOf="@+id/layout_crud_tasks"
            app:layout_constraintLeft_toLeftOf="parent">

            <android.widget.Button
                android:id="@+id/collapse_completing_tasks"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@drawable/ic_menu_up"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/title_completing_tasks"/>

            <TextView
                android:id="@+id/title_completing_tasks"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:gravity="center_vertical"
                android:text="@string/help_completing_tasks"
                android:textSize="18sp"
                android:textColor="@color/sub_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@id/collapse_completing_tasks" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_body_completing_tasks"
