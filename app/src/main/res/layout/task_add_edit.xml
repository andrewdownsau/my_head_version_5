<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/task_add_edit_scrollview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui_fragments.U05TaskAddEdit">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/task_add_edit_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:minHeight="200dp"
        android:layout_margin="16dp">

        <TextView
            android:id="@+id/label_context"
            android:layout_width="90dp"
            android:layout_height="36dp"
            android:layout_marginTop="16dp"
            android:gravity="center_vertical"
            android:text="@string/context_label"
            android:textSize="16sp"
            android:textColor="@color/sub_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent" />

        <Spinner
            android:id="@+id/context_spinner"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:minHeight="36dp"
            android:autofillHints="Name of motive"
            android:inputType="textCapSentences"
            android:labelFor="@id/label_condition"
            android:textColor="@color/sub_content"
            app:layout_constraintLeft_toRightOf="@id/label_context"
            app:layout_constraintTop_toTopOf="@id/label_context"
            tools:ignore="TouchTargetSizeCheck" />

        <TextView
            android:id="@+id/label_task_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/task_name"
            android:textSize="16sp"
            android:textColor="@color/sub_content"
            app:layout_constraintTop_toBottomOf="@id/label_context"
            app:layout_constraintLeft_toLeftOf="parent" />

        <EditText
            android:id="@+id/edit_task_name"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:autofillHints="Name of task"
            android:inputType="textCapSentences"
            android:hint="@string/task_hint"
            android:textColor="@color/sub_content"
            android:labelFor="@id/label_task_name"
            app:layout_constraintTop_toBottomOf="@id/label_task_name"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            tools:ignore="LabelFor" />

        <TextView
            android:id="@+id/label_motive_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/motive_name"
            android:textSize="16sp"
            android:textColor="@color/sub_content"
            app:layout_constraintTop_toBottomOf="@+id/edit_task_name"
            app:layout_constraintLeft_toLeftOf="parent" />

        <EditText
            android:id="@+id/edit_motive_name"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:autofillHints="Name of motive"
            android:inputType="textCapSentences"
            android:labelFor="@id/label_motive_name"
            android:textColor="@color/sub_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/label_motive_name"
            tools:ignore="LabelFor,SpeakableTextPresentCheck" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/complexity_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/edit_motive_name"
            app:layout_constraintLeft_toLeftOf="parent">

            <TextView
                android:id="@+id/label_complexity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/complexity_name"
                android:textSize="16sp"
                android:textColor="@color/sub_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent" />

            <TextView
                android:id="@+id/complexity_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:textSize="16sp"
                android:textColor="@color/sub_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/label_complexity" />

            <SeekBar
                android:id="@+id/seekbar_complexity"
                style="@style/Widget.AppCompat.SeekBar.Discrete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="9"
                android:progress="1"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/label_complexity"
                app:layout_constraintLeft_toLeftOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/motivation_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/complexity_layout"
            app:layout_constraintLeft_toLeftOf="parent">

            <TextView
                android:id="@+id/label_motivation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/motivation_name"
                android:textSize="16sp"
                android:textColor="@color/sub_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent" />

            <TextView
                android:id="@+id/motivation_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:textSize="16sp"
                android:textColor="@color/sub_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/label_motivation" />

            <SeekBar
                android:id="@+id/seekbar_motivation"
                style="@style/Widget.AppCompat.SeekBar.Discrete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="9"
                android:progress="5"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/label_motivation"
                app:layout_constraintLeft_toLeftOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/label_start_date"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/start_date_name"
            android:textSize="16sp"
            android:textColor="@color/sub_content"
            app:layout_constraintTop_toBottomOf="@+id/motivation_layout"
            app:layout_constraintLeft_toLeftOf="parent" />

        <EditText
            android:id="@+id/edit_start_date"
            android:layout_width="90dp"
            android:layout_height="48dp"
            android:autofillHints="Task start date"
            android:inputType="date"
            android:textColor="@color/sub_content"
            android:labelFor="@id/label_motive_name"
            android:hint="@string/date_hint"
            android:focusable="false"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintTop_toBottomOf="@id/label_start_date"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/edit_start_time"
            tools:ignore="LabelFor" />

        <EditText
            android:id="@+id/edit_start_time"
            android:layout_width="100dp"
            android:layout_height="48dp"
            android:autofillHints="Task start time"
            android:inputType="time"
            android:textColor="@color/sub_content"
            android:labelFor="@id/label_motive_name"
            android:hint="@string/time_hint"
            android:focusable="false"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintTop_toBottomOf="@id/label_start_date"
            app:layout_constraintLeft_toRightOf="@+id/edit_start_date"
            app:layout_constraintRight_toRightOf="parent"
            tools:ignore="LabelFor" />

        <TextView
            android:id="@+id/label_end_date"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/end_date_name"
            android:textSize="16sp"
            android:textColor="@color/sub_content"
            app:layout_constraintTop_toBottomOf="@+id/edit_start_date"
            app:layout_constraintLeft_toLeftOf="parent" />

        <EditText
            android:id="@+id/edit_end_date"
            android:layout_width="90dp"
            android:layout_height="48dp"
            android:autofillHints="Task start date"
            android:inputType="date"
            android:textColor="@color/sub_content"
            android:labelFor="@id/label_motive_name"
            android:hint="@string/date_hint"
            android:focusable="false"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintTop_toBottomOf="@id/label_end_date"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/edit_end_time"
            tools:ignore="LabelFor" />

        <EditText
            android:id="@+id/edit_end_time"
            android:layout_width="100dp"
            android:layout_height="48dp"
            android:autofillHints="Task start time"
            android:inputType="time"
            android:textColor="@color/sub_content"
            android:labelFor="@id/label_motive_name"
            android:hint="@string/time_hint"
            android:focusable="false"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintTop_toBottomOf="@id/label_end_date"
            app:layout_constraintLeft_toRightOf="@+id/edit_end_date"
            app:layout_constraintRight_toRightOf="parent"
            tools:ignore="LabelFor" />

        <TextView
            android:id="@+id/label_completed_check"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:text="@string/completed_name"
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="@color/sub_content"
            app:layout_constraintTop_toBottomOf="@+id/edit_end_date"
            app:layout_constraintLeft_toLeftOf="parent" />

        <CheckBox
            android:id="@+id/completed_check"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:textColor="@color/sub_content"
            app:layout_constraintTop_toTopOf="@id/label_completed_check"
            app:layout_constraintLeft_toRightOf="@id/label_completed_check"
            tools:ignore="TouchTargetSizeCheck"/>

        <EditText
            android:id="@+id/edit_completed_date"
            android:layout_width="90dp"
            android:layout_height="48dp"
            android:layout_marginTop="10dp"
            android:autofillHints="Completed Date"
            android:inputType="date"
            android:textColor="@color/sub_content"
            android:labelFor="@id/label_completed_check"
            android:hint="@string/date_hint"
            android:visibility="gone"
            android:focusable="false"
            app:layout_constraintTop_toBottomOf="@+id/edit_end_date"
            app:layout_constraintLeft_toRightOf="@id/completed_check"
            tools:ignore="LabelFor" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/checklist_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/label_completed_check"
            app:layout_constraintLeft_toLeftOf="parent">

            <TextView
                android:id="@+id/label_checklist"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginTop="16dp"
                android:text="@string/checklist_name"
                android:gravity="center"
                android:textSize="16sp"
                android:textColor="@color/sub_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent" />

            <CheckBox
                android:id="@+id/checklist_check"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:textColor="@color/sub_content"
                app:layout_constraintLeft_toRightOf="@id/label_checklist"
                app:layout_constraintTop_toTopOf="@id/label_checklist"
                tools:ignore="TouchTargetSizeCheck" />

            <androidx.core.widget.NestedScrollView
                android:id="@+id/subtask_scroll_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxHeight="240dp"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/label_checklist">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/subtask_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.core.widget.NestedScrollView>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/repeat_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/checklist_layout"
            app:layout_constraintLeft_toLeftOf="parent">

            <TextView
                android:id="@+id/label_repeat_check"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginTop="16dp"
                android:text="@string/repeat_name"
                android:gravity="center_vertical"
                android:textSize="16sp"
                android:textColor="@color/sub_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent" />

            <CheckBox
                android:id="@+id/repeat_check"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:textColor="@color/sub_content"
                app:layout_constraintTop_toTopOf="@id/label_repeat_check"
                app:layout_constraintLeft_toRightOf="@id/label_repeat_check"
                tools:ignore="TouchTargetSizeCheck"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/repeat_active_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/repeat_check"
                app:layout_constraintLeft_toLeftOf="parent">
                <TextView
                    android:id="@+id/label_repeat_clause"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginTop="16dp"
                    android:text="@string/repeat_until"
                    android:gravity="center_vertical"
                    android:textSize="16sp"
                    android:textColor="@color/sub_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent" />

                <RadioGroup
                    android:id="@+id/radio_repeat_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/label_repeat_clause"
                    app:layout_constraintLeft_toLeftOf="parent">
                    <RadioButton
                        android:id="@+id/radio_repeat_day"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/sub_content"
                        android:text="@string/day_repeats"
                        android:textSize="16sp"
                        android:checked="true"
                        tools:ignore="VisualLintButtonSize" />
                    <RadioButton
                        android:id="@+id/radio_repeat_other"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/sub_content"
                        android:text="@string/other_repeats"
                        android:textSize="16sp"
                        tools:ignore="VisualLintButtonSize" />
                </RadioGroup>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/repeat_day_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toBottomOf="@+id/radio_repeat_type"
                    app:layout_constraintLeft_toLeftOf="parent">
                    <ToggleButton
                        android:id="@+id/toggle_mon"
                        android:layout_width="33dp"
                        android:layout_height="35dp"
                        android:layout_marginEnd="5dp"
                        android:background="@drawable/toggle_selector"
                        android:textOff="@string/Monday"
                        android:textOn="@string/Monday"
                        app:layout_constraintHorizontal_chainStyle="packed"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toLeftOf="@+id/toggle_tue"/>
                    <ToggleButton
                        android:id="@+id/toggle_tue"
                        android:layout_width="33dp"
                        android:layout_height="35dp"
                        android:layout_marginEnd="5dp"
                        android:background="@drawable/toggle_selector"
                        android:textOff="@string/Tuesday"
                        android:textOn="@string/Tuesday"
                        android:textAllCaps="false"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toRightOf="@+id/toggle_mon"
                        app:layout_constraintRight_toLeftOf="@+id/toggle_wed"/>
                    <ToggleButton
                        android:id="@+id/toggle_wed"
                        android:layout_width="33dp"
                        android:layout_height="35dp"
                        android:layout_marginEnd="5dp"
                        android:background="@drawable/toggle_selector"
                        android:textOff="@string/Wednesday"
                        android:textOn="@string/Wednesday"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toRightOf="@+id/toggle_tue"
                        app:layout_constraintRight_toLeftOf="@+id/toggle_thu"/>
                    <ToggleButton
                        android:id="@+id/toggle_thu"
                        android:layout_width="33dp"
                        android:layout_height="35dp"
                        android:layout_marginEnd="5dp"
                        android:background="@drawable/toggle_selector"
                        android:textOff="@string/Thursday"
                        android:textOn="@string/Thursday"
                        android:textAllCaps="false"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toRightOf="@+id/toggle_wed"
                        app:layout_constraintRight_toLeftOf="@+id/toggle_fri"/>
                    <ToggleButton
                        android:id="@+id/toggle_fri"
                        android:layout_width="33dp"
                        android:layout_height="35dp"
                        android:layout_marginEnd="5dp"
                        android:background="@drawable/toggle_selector"
                        android:textOff="@string/Friday"
                        android:textOn="@string/Friday"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toRightOf="@+id/toggle_thu"
                        app:layout_constraintRight_toLeftOf="@+id/toggle_sat"/>
                    <ToggleButton
                        android:id="@+id/toggle_sat"
                        android:layout_width="33dp"
                        android:layout_height="35dp"
                        android:layout_marginEnd="5dp"
                        android:background="@drawable/toggle_selector"
                        android:textOff="@string/Saturday"
                        android:textOn="@string/Saturday"
                        android:textAllCaps="false"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toRightOf="@+id/toggle_fri"
                        app:layout_constraintRight_toLeftOf="@+id/toggle_sun"/>
                    <ToggleButton
                        android:id="@+id/toggle_sun"
                        android:layout_width="33dp"
                        android:layout_height="35dp"
                        android:layout_marginEnd="5dp"
                        android:background="@drawable/toggle_selector"
                        android:textOff="@string/Sunday"
                        android:textOn="@string/Sunday"
                        android:textAllCaps="false"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toRightOf="@+id/toggle_sat"
                        app:layout_constraintRight_toRightOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/repeat_other_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toBottomOf="@+id/repeat_day_layout"
                    app:layout_constraintLeft_toLeftOf="parent">
                    <TextView
                        android:id="@+id/label_frequency"
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:gravity="center_vertical"
                        android:text="@string/frequency_name"
                        android:textSize="16sp"
                        android:textColor="@color/sub_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent" />

                    <EditText
                        android:id="@+id/edit_repeat_every"
                        android:layout_width="50dp"
                        android:layout_height="48dp"
                        android:autofillHints="Repeat until clause"
                        android:inputType="number"
                        android:textColor="@color/sub_content"
                        android:textAlignment="center"
                        android:labelFor="@id/radio_repeat_until"
                        android:hint="@string/x_times"
                        app:layout_constraintTop_toTopOf="@+id/label_frequency"
                        app:layout_constraintLeft_toRightOf="@+id/label_frequency" />

                    <Spinner
                        android:id="@+id/frequency_spinner"
                        android:layout_width="0dp"
                        android:layout_height="36dp"
                        android:layout_marginTop="6dp"
                        android:autofillHints="Name of motive"
                        android:inputType="textCapSentences"
                        android:textColor="@color/sub_content"
                        android:labelFor="@id/label_condition"
                        app:layout_constraintTop_toTopOf="@id/label_frequency"
                        app:layout_constraintLeft_toRightOf="@id/edit_repeat_every"
                        tools:ignore="TouchTargetSizeCheck"/>
                </androidx.constraintlayout.widget.ConstraintLayout>


                <RadioButton
                    android:id="@+id/radio_repeat_forever"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:textColor="@color/sub_content"
                    android:text="@string/forever_repeats"
                    android:textSize="16sp"
                    android:checked="true"
                    app:layout_constraintTop_toBottomOf="@+id/repeat_other_layout"
                    app:layout_constraintLeft_toLeftOf="parent"
                    tools:ignore="VisualLintButtonSize" />

                <RadioButton
                    android:id="@+id/radio_repeat_until"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/until_repeats"
                    android:textColor="@color/sub_content"
                    android:textSize="16sp"
                    app:layout_constraintTop_toBottomOf="@+id/radio_repeat_forever"
                    app:layout_constraintLeft_toLeftOf="parent"/>

                <EditText
                    android:id="@+id/edit_repeat_until"
                    android:layout_width="90dp"
                    android:layout_height="48dp"
                    android:autofillHints="Repeat until clause"
                    android:inputType="date"
                    android:textColor="@color/sub_content"
                    android:labelFor="@id/radio_repeat_until"
                    android:hint="@string/date_hint"
                    android:focusable="false"
                    app:layout_constraintTop_toTopOf="@+id/radio_repeat_until"
                    app:layout_constraintLeft_toRightOf="@+id/radio_repeat_until" />

                <RadioButton
                    android:id="@+id/radio_repeat_after"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/after_repeats"
                    android:textColor="@color/sub_content"
                    android:textSize="16sp"
                    app:layout_constraintTop_toBottomOf="@+id/radio_repeat_until"
                    app:layout_constraintLeft_toLeftOf="parent"/>

                <EditText
                    android:id="@+id/edit_repeat_after"
                    android:layout_width="50dp"
                    android:layout_height="48dp"
                    android:autofillHints="Repeat until clause"
                    android:inputType="number"
                    android:textColor="@color/sub_content"
                    android:textAlignment="center"
                    android:labelFor="@id/radio_repeat_until"
                    android:hint="@string/x_times"
                    app:layout_constraintTop_toTopOf="@+id/radio_repeat_after"
                    app:layout_constraintLeft_toRightOf="@+id/radio_repeat_after" />

                <TextView
                    android:id="@+id/label_repeat_after"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="@string/repeats_number"
                    android:textColor="@color/sub_content"
                    android:textSize="16sp"
                    app:layout_constraintTop_toTopOf="@+id/radio_repeat_after"
                    app:layout_constraintLeft_toRightOf="@+id/edit_repeat_after" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/condition_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/repeat_layout"
            app:layout_constraintLeft_toLeftOf="parent">

            <TextView
                android:id="@+id/label_condition"
                android:layout_width="90dp"
                android:layout_height="36dp"
                android:layout_marginTop="16dp"
                android:gravity="center_vertical"
                android:text="@string/condition_name"
                android:textSize="16sp"
                android:textColor="@color/sub_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent" />

            <Spinner
                android:id="@+id/condition_spinner"
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:minHeight="36dp"
                android:autofillHints="Name of motive"
                android:inputType="textCapSentences"
                android:textColor="@color/sub_content"
                android:labelFor="@id/label_condition"
                app:layout_constraintTop_toTopOf="@id/label_condition"
                app:layout_constraintLeft_toRightOf="@id/label_condition"
                tools:ignore="TouchTargetSizeCheck"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/label_notes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/notes_name"
            android:textSize="16sp"
            android:textColor="@color/sub_content"
            app:layout_constraintTop_toBottomOf="@+id/condition_layout"
            app:layout_constraintLeft_toLeftOf="parent" />

        <EditText
            android:id="@+id/edit_notes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints="Notes"
            android:gravity="top|start"
            android:hint="@string/task_notes_hint"
            android:inputType="textCapSentences|textMultiLine"
            android:lines="3"
            android:textColor="@color/sub_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/label_notes"
            tools:ignore="LabelFor" />

        <TextView
            android:id="@+id/label_warning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:lines="2"
            android:text="@string/character_warning"
            android:textSize="16sp"
            android:textColor="#fd4a4a"
            android:textAlignment="center"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/edit_notes"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent" />

        <!-- CRUD Buttons at base of page -->
        <android.widget.Button
            android:id="@+id/btn_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/close"
            style="@style/button_primary"
            android:layout_marginTop="20dp"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintTop_toBottomOf="@id/label_warning"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/btn_save" />

        <android.widget.Button
            android:id="@+id/btn_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/save"
            style="@style/button_primary"
            android:layout_marginTop="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/btn_delete"
            app:layout_constraintLeft_toRightOf="@id/btn_close" />

        <android.widget.Button
            android:id="@+id/btn_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/delete"
            style="@style/button_primary"
            android:layout_marginTop="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@id/btn_save" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>