<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentTaskAddEdit">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/task_add_edit_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:minHeight="200dp"
        android:layout_margin="16dp">

        <android.widget.Button
            android:id="@+id/btn_import_export"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:text="@string/import_export"
            android:textSize="18sp"
            style="@style/button_primary"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent" />

        <android.widget.Button
            android:id="@+id/btn_ui_colours"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_marginTop="15dp"
            android:text="@string/ui_colours"
            android:textSize="18sp"
            style="@style/button_primary"
            app:layout_constraintTop_toBottomOf="@+id/btn_import_export"
            app:layout_constraintLeft_toLeftOf="parent" />

        <android.widget.Button
            android:id="@+id/btn_archive"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_marginTop="15dp"
            android:text="@string/archive"
            android:textSize="18sp"
            style="@style/button_primary"
            app:layout_constraintTop_toBottomOf="@+id/btn_ui_colours"
            app:layout_constraintLeft_toLeftOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>