<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="fab_rounded">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
    <style name="button_primary">
        <item name="android:background">@drawable/shadow_button_blue</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="menu_primary">
        <item name="android:background">@drawable/shadow_menu_white</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="ToolBarTheme"  parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">@color/black</item>
    </style>
    <style name="MyToolbarStyle" parent="Theme.AppCompat.Light">
        <item name="android:itemBackground">@drawable/menu_item_border</item>
        <item name="android:textColor">@color/white</item>
        <item name="overlapAnchor">false</item>
        <item name="android:dropDownVerticalOffset">?attr/actionBarSize</item>
    </style>
    <style name="dialog_button">
        <item name="android:background">@drawable/custom_dialog_background</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="SCBSwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">#99CCFF</item>
        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">#f1f1f1</item>
        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">#42221f1f</item>
    </style>
</resources>